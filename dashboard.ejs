<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
    crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
    crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <title>Bootstrap Theme</title>
  <script>
    function editPost(id){
            window.location.href = "/post/edit?id=" + id;
    }
    function addPost() {
            document.getElementById("addPost").submit();
    }

    
    function editBox(id){
            window.location.href = "/box/edit?id=" + id;
    }
    function addBox() {
            document.getElementById("addBox").submit();
    }
     
    
  </script>
</head>

<body>
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark p-0">
    <div class="container">
      <a href="/" class="navbar-brand">Blogen</a>
      <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav">
          <li class="nav-item px-2">
            <a href="/" class="nav-link active">Dashboard</a>
          </li>
          <li class="nav-item px-2">
            <a href="/post" class="nav-link">Posts</a>
          </li>
          <li class="nav-item px-2">
            <a href="/box" class="nav-link">Boxes</a>
          </li>
          <li class="nav-item px-2">
            <a href="/menu" class="nav-link">Menus</a>
          </li>
          <li class="nav-item px-2">
            <a href="/user" class="nav-link">Users</a>
          </li>
        </ul>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown mr-3">
            <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              <i class="fas fa-menu"></i> Welcome Brad
            </a>
            <div class="dropdown-menu">
              <a href="/menu/profile" class="dropdown-item">
                <i class="fas fa-menu-circle"></i> Profile
              </a>
              <a href="/menu/setting" class="dropdown-item">
                <i class="fas fa-cog"></i> Settings
              </a>
            </div>
          </li>
          <li class="nav-item">
            <a href="/menu/logout" class="nav-link">
              <i class="fas fa-menu-times"></i> Logout
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- HEADER -->
  <header id="main-header" class="py-2 bg-primary text-white">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1>
            <i class="fas fa-cog"></i> Dashboard</h1>
        </div>
      </div>
    </div>
  </header>

  <!-- ACTIONS -->
  <section id="actions" class="py-4 mb-4 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <a href="/post/add" class="btn btn-primary btn-block" data-toggle="modal" data-target="#addPostModal">
            <i class="fas fa-plus"></i> Add Post
          </a>
        </div>
        <div class="col-md-3">
          <a href="/box/add" class="btn btn-success btn-block" data-toggle="modal" data-target="#addBoxModal">
            <i class="fas fa-plus"></i> Add Box
          </a>
        </div>
        <div class="col-md-3">
          <a href="/menu/add" class="btn btn-warning btn-block" data-toggle="modal" data-target="#addMenuModal">
            <i class="fas fa-plus"></i> Add Menu
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- POSTS -->
  <section id="posts">
    <div class="container">
      <div class="row">
        <div class="col-md-9">
          <div class="card">
            <div class="card-header">
              <h4>Latest Posts</h4>
            </div>
            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th>#</th>
                  <th>Name</th>
                  <th>Phone</th>
                  <th>Date</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% for(var i=0; i< data.length; i++) { %>
                <tr>
                  <td>
                    <%= data[i].id %>
                  </td>
                  <td>
                    <%= data[i].name %>
                  </td>
                  <td>
                    <%= data[i].phone %>
                  </td>
                  <td>
                    <%= data[i].date %>
                  </td>
                  <td>
                    <button value="Details" class="btn btn-secondary" onclick="editPost('<%= data[i].id %>')">
                      <i class="fas fa-angle-double-right"></i> Details
                    </button>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-center bg-primary text-white mb-3">
            <div class="card-body">
              <h3>Posts</h3>
              <h4 class="display-4">
                <i class="fas fa-pencil-alt"></i>
                <%= postCount %>
              </h4>
              <a href="/post" class="btn btn-outline-light btn-sm">View</a>
            </div>
          </div>

          <div class="card text-center bg-success text-white mb-3">
            <div class="card-body">
              <h3>Boxs</h3>
              <h4 class="display-4">
                <i class="fas fa-folder"></i>
                <%= boxCount %>
              </h4>
              <a href="/box" class="btn btn-outline-light btn-sm">View</a>
            </div>
          </div>

          <div class="card text-center bg-warning text-white mb-3">
            <div class="card-body">
              <h3>Menus</h3>
              <h4 class="display-4">
                <i class="fas fa-users"></i>
                <%= menuCount %>
              </h4>
              <a href="/menu" class="btn btn-outline-light btn-sm">View</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FOOTER -->
  <footer id="main-footer" class="bg-dark text-white mt-5 p-5">
    <div class="container">
      <div class="row">
        <div class="col">
          <p class="lead text-center">
            淡江錢櫃 &copy;
            <span id="year"></span>
            KTV最佳選擇<br>
            地址：25137 新北市淡水區英專路151號<br>
            電話：+886-2-2621-5656
          </br>
          </br>
          </p>
        </div>
      </div>
    </div>
  </footer>


  <!-- MODALS -->

  <!-- ADD POST MODAL -->
  <div class="modal fade" id="addPostModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Add Post</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="addPost" action="/post/add" method="post">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="name" class="form-control" value="" placeholder="Name">
            </div>
            <div class="form-group">
              <label for="phone">Phone</label>
              <input type="phone" name="phone" class="form-control" value="" placeholder="Phone">
            </div>
            <div class="form-group">
              <label for="postdate">Date</label>
              <input name="date" type="date" id="postdate" class="form-control" value="<%= new Date() %>">
            </div>

            
          </form>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal" onclick="addPost()">Save Changes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- ADD BOX MODAL -->
  <div class="modal fade" id="addBoxModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Add Box</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form id="addBox" action="/box/add" method="box">
            <div class="form-group">
              <label for="people">People</label>
              <input type="text" name="people" class="form-control" value="" placeholder="People">
            </div>
            <div class="form-group">
              <label for="size">Size</label>
              <input type="size" name="size" class="form-control" value="" placeholder="Size">
            </div>
            <div class="form-group">
              <label for="boxdate">Date</label>
              <input name="date" type="date" id="boxdate" class="form-control" value="<%= new Date() %>">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button class="btn btn-primary" data-dismiss="modal" onclick="addBox()">Save Changes</button>
        </div>
      </div>
    </div>
  </div>

  <!-- ADD MENU MODAL -->
  <div class="modal fade" id="addMenuModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-warning text-white">
          <h5 class="modal-title">Add Menu</h5>
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <label for="mealsname">Mealsname</label>
              <input type="text" class="form-control">
            </div>
            <div class="form-group">
              <label for="price">Price</label>
              <input type="price" class="form-control">
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button class="btn btn-warning" data-dismiss="modal">Save Changes</button>
        </div>
      </div>
    </div>
  </div>


  <script src="http://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T"
    crossorigin="anonymous"></script>
  <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/locale/af.js"></script>
  <script>
    // Get the current year for the copyright
    $('#year').text(new Date().getFullYear());

    CKEDITOR.replace('editor1');
  </script>
</body>

</html>